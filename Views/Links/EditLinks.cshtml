@using LinkBuildingProject.Domain
@model LinkBuildingProject.Web.ViewModels.LinkViewModels.ChangeStatus

@{
    ViewData["Title"] = "EditLinks";
}

<h1>EditLinks</h1>

<h4>ChangeStatus</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditLinks">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
               
                <input type="hidden" asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" asp-items="@Html.GetEnumSelectList<LinkStatus>()"  class="form-control" >
                    <option selected disabled>--Change Status</option>
                    </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
